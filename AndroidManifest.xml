<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.floatingbubble"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/floating_img3"
        android:label="@string/app_name" >
        <activity
            android:name="com.yapp.mycard.FloatingBubbleActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.yapp.mycard.FloatingFaceBubbleService" />

        <activity
            android:name="com.yapp.mycard.ListActivity"
            android:theme="@style/Translucent_Dialog" >
        </activity>
        <activity
            android:name="com.google.zxing.client.android.CaptureActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:windowSoftInputMode="stateAlwaysHidden" >
            <intent-filter>
                <action android:name="com.google.zxing.client.android.SCAN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yapp.mycard.AlertDialogActivity"
            android:theme="@android:style/Theme.Light.WallpaperSettings" >
        </activity>

        <receiver android:name="com.yapp.mycard.BrReceiver1" >
        </receiver>

        <activity
            android:name="com.yapp.mycard.TutorialActivity"
            android:label="@string/title_activity_tutorial"
            android:theme="@style/Translucent_Dialog" >
        </activity>
    </application>

</manifest>